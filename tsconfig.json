{
  "compilerOptions": {
    "lib": ["ESNext"],

    "target": "ES6",
    "module": "ESNext",

    "allowJs": true,

    "outDir": "./dist",
    "rootDir": "./src",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,

    "moduleResolution": "node",
    "resolveJsonModule": true,

    "strict": true,

    "skipLibCheck": true,

    "noFallthroughCasesInSwitch": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

  },
  "include": ["src"],
}